{% extends 'base.html.twig' %}

{% block title %}My Wallet{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Wallet</h1>

    Liste des cryptos dans le portefeuille:
    <ul>
        {% for crypto in cryptos %}
        <li>
            <code><a href="{{ path('app_crypto_symbol', {symbol: crypto.symbol}) }}">{{ crypto.symbol|e }}</a></code>
            &mdash; last: {{ crypto.last|e }}
            &mdash; high: {{ crypto.high|e }}
            &mdash; low: {{ crypto.low|e }}
            &mdash; volume: {{ crypto.volume|e }}
            {% if crypto.sell > crypto.last %}
            &#11016;
            {% else %}
            &#11018;
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
